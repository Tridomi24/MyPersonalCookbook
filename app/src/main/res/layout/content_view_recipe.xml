<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRecipe_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tmitchell.mypersonalcookbook.ViewRecipe"
    tools:showIn="@layout/activity_view_recipe">

    <LinearLayout
        android:id="@+id/viewRecipe_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--RECIPE TITLE-->
        <TextView
            android:id="@+id/title_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/recipeTitle_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/recipeTitle"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE CATEGORY-->

        <TextView
            android:id="@+id/category_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipeCategory_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/category_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/recipeCategory"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE SERVES-->

        <TextView
            android:id="@+id/serves_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipeServes_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/serves_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/recipeServes"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE INGREDIENTS-->

        <TextView
            android:id="@+id/ingredients_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipeIngredients_label"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ingredients_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/recipeIngredients"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE DIRECTIONS-->

        <TextView
            android:id="@+id/directions_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipeDirections_label"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/directions_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/recipeDirections"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE COMMENTS-->
        <TextView
            android:id="@+id/comments_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/comments_label"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/comments_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/recipeComments"
            android:textColor="@color/colorDefault"
            android:textSize="15sp" />

        <!--RECIPE PREP TIME-->

        <TextView
            android:id="@+id/prep_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipePreptime_label"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/preptime_rl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/prep_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/recipePreptime"
                android:textColor="@color/colorDefault"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/viewRecipe_preptime_mins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@+id/prep_view"
                android:text="@string/minutes" />
        </RelativeLayout>

        <!--RECIPE COOK TIME-->
        <TextView
            android:id="@+id/cook_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:text="@string/recipeCooktime_label"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/cooktime_rl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cook_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:text="@string/recipeCooktime"
                android:textColor="@color/colorDefault"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/viewRecipe_cooktime_mins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@+id/cook_view"
                android:text="@string/minutes" />
        </RelativeLayout>

        <!--EDIT A RECIPE-->

        <Button
            android:id="@+id/updateRecipe_Button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.61"
            android:background="@color/colorPrimary"

            android:onClick="editRecipe"
            android:text="@string/editRecipe_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!--DELETE A RECIPE-->

        <Button
            android:id="@+id/deleteRecipe_Button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.61"
            android:background="@color/colorPrimary"

            android:onClick="deleteRecipe"
            android:text="@string/deleteRecipe_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>


